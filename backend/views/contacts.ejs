<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
    body{
      background-color: black;
      color: white;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      text-align: left;
    }
    thead {
      background-color: #9D00FF;
      color: white;
    }
    /* tr:nth-child(even) {
      background-color: #f2f2f2;
    } */
  </style>
</head>
<body>
  <h1><%= title %></h1>

  <table>
    <thead>
      <tr>
        <th>Sr No.</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Description</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% if (contacts && contacts.length > 0) { %>
        <% contacts.forEach((contact,index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= contact.firstName %></td>
            <td><%= contact.lastName %></td>
            <td><%= contact.workEmail %></td>
            <td><%= contact.phoneNumber %></td>
            <td><%= contact.description %></td>
            <td><%= new Date(contact.date).toLocaleString() %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" style="text-align:center;">No contacts found</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>